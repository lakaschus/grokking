{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Grokking Addition In Distribution",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/cli.py",
            "console": "integratedTerminal",
            "args": [
                "--operation",
                "x+y",
                "--training_fraction",
                "0.3",
                "--prime",
                "97",
                "--num_layers",
                "2",
                "--dim_model",
                "128",
                "--num_heads",
                "4",
                "--batch_size",
                "512",
                "--learning_rate",
                "1e-3",
                "--weight_decay",
                "1",
                "--num_steps",
                "10000",
                "--device",
                "cuda"
            ]
        },
        {
            "name": "Grokking Addition Out of Distribution",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/cli.py",
            "console": "integratedTerminal",
            "args": [
                "--operation",
                "x+y",
                "--curriculum",
                "domain_separated",
                "--training_fraction",
                "0.5",
                "--prime",
                "97",
                "--num_layers",
                "2",
                "--dim_model",
                "128",
                "--num_heads",
                "4",
                "--batch_size",
                "512",
                "--learning_rate",
                "1e-3",
                "--weight_decay",
                "1",
                "--num_steps",
                "10000",
                "--device",
                "cuda"
            ]
        },
        {
            "name": "Grokking Binary Addition In-Distribution",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/cli.py",
            "console": "integratedTerminal",
            "args": [
                "--operation",
                "x+y_binary",
                "--curriculum",
                "random",
                "--task_type",
                "sequence",
                "--training_fraction",
                "0.8",
                "--prime",
                "5",
                "--num_layers",
                "4",
                "--dim_model",
                "128",
                "--num_heads",
                "4",
                "--batch_size",
                "512",
                "--learning_rate",
                "1e-4",
                "--weight_decay",
                "1",
                "--num_steps",
                "10000",
                "--device",
                "cuda"
            ]
        },
        {
            "name": "Inference",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/infer.py",
            "console": "integratedTerminal",
            "args": [
                "--model_path",
                "models/best_model_x+y.pt",
            ],
        }
    ]
}